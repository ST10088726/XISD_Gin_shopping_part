@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetail != null && Model.CartDetail.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Book</th>
                <th>Image</th>
                <th>Genre</th>
                <th>Unit Price(INR)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetail)
            {
                <tr>
                    <td>@item.Stock.StockName</td>
                    <td>
                        <img src="img/@(item.StockId+".jpeg")" style="width:80px;height:100px" />
                    </td>
                    <td>@item.Stock.Category</td>
                    <td>@item.Stock.Price X @item.Quantity</td>
                    <td>@(Convert.ToInt32(item.Stock.Price) * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/Cart/AddItem?bookId=@item.StockId&&redirect=1">+</a>
                        <a class="btn btn-info" href="/cart/removeitem?bookid=@item.StockId">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(INR): </h5>
            @(Model.CartDetail.Select(item => Convert.ToInt32(item.Stock.Price) * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>



